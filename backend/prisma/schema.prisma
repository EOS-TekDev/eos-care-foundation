generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?
  name      String
  photo     String?
  googleId  String?  @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  berita         Berita[]
  beritaComments BeritaComment[]

  @@map("users")
}

model Berita {
  id                 Int      @id @default(autoincrement())
  title              String   @db.Text
  content            String   @db.Text
  image              String?
  isPublished        Boolean  @default(false)
  showDonationButton Boolean  @default(false)
  donasiId           Int?
  authorId           Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  author User   @relation(fields: [authorId], references: [id])
  donasi Donasi? @relation(fields: [donasiId], references: [id])

  comments BeritaComment[]

  @@index([authorId], map: "berita_authorId_fkey")
  @@index([donasiId], map: "berita_donasiId_fkey")
  @@map("berita")
}

model BeritaComment {
  id        Int      @id @default(autoincrement())
  beritaId  Int
  userId    Int
  parentId  Int?
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  berita  Berita @relation(fields: [beritaId], references: [id])
  user    User   @relation(fields: [userId], references: [id])
  parent  BeritaComment?   @relation("BeritaCommentReplies", fields: [parentId], references: [id])
  replies BeritaComment[] @relation("BeritaCommentReplies")

  @@index([beritaId], map: "berita_comments_beritaId_fkey")
  @@index([userId], map: "berita_comments_userId_fkey")
  @@index([parentId], map: "berita_comments_parentId_idx")
  @@map("berita_comments")
}

model About {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  content   String   @db.Text
  image     String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about")
}

model Kegiatan {
  id                 Int              @id @default(autoincrement())
  title              String           @db.VarChar(255)
  description        String           @db.Text
  image              String?
  category           KegiatanCategory
  date               DateTime?
  isActive           Boolean          @default(true)
  showDonationButton Boolean          @default(false)
  donasiId           Int?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  donasi Donasi? @relation(fields: [donasiId], references: [id])

  @@index([donasiId], map: "kegiatan_donasiId_fkey")
  @@map("kegiatan")
}

model Donasi {
  id            Int       @id @default(autoincrement())
  title         String    @db.VarChar(255)
  description   String    @db.Text
  image         String?
  targetAmount  Decimal   @db.Decimal(15, 2)
  currentAmount Decimal   @default(0.00) @db.Decimal(15, 2)
  deadline      DateTime?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  berita        Berita[]
  kegiatan      Kegiatan[]
  transactions  DonasiTransaction[]

  @@map("donasi")
}

model DonasiTransaction {
  id          Int            @id @default(autoincrement())
  donasiId    Int
  donorName   String
  donorEmail  String?
  amount      Decimal        @db.Decimal(15, 2)
  message     String?        @db.Text
  status      DonationStatus @default(PENDING)
  orderId     String?        @unique
  snapToken   String?        @db.Text
  paymentType String?
  createdAt   DateTime       @default(now())

  donasi Donasi @relation(fields: [donasiId], references: [id])

  @@index([donasiId], map: "donasi_transactions_donasiId_fkey")
  @@map("donasi_transactions")
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  photo     String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("team_members")
}

model HomeHero {
  id             Int      @id @default(autoincrement())
  badge          String
  headline       String   @db.Text
  subheadline    String   @db.Text
  ctaPrimary     String
  ctaSecondary   String
  cardTitle      String
  cardDesc       String   @db.Text
  cardBadge      String
  volunteerCount String
  todayAmount    String
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("home_hero")
}

model HomeService {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String   @db.Text
  icon        String
  color       String
  stats       String?
  statsLabel  String?
  isFeatured  Boolean  @default(false)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("home_services")
}

model HomeCta {
  id                Int      @id @default(autoincrement())
  trustBadges       String   @db.Text
  headline          String
  subheadline       String
  description       String   @db.Text
  minDonation       String
  ctaPrimary        String
  ctaSecondary      String
  cardTitle         String
  cardProgress      Int      @default(85)
  testimonial       String?  @db.Text
  testimonialAuthor String?
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("home_cta")
}

enum Role {
  ADMIN
  USER
}

enum KegiatanCategory {
  SOSIAL
  PENDIDIKAN
  PELATIHAN
}

enum DonationStatus {
  PENDING
  COMPLETED
  FAILED
}
