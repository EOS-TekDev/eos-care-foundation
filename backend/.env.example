DATABASE_URL="mysql://root:@localhost:3306/eos_foundation"
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_IS_PRODUCTION="false"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes in milliseconds
RATE_LIMIT_PUBLIC_MAX=100            # Public API max requests per window
RATE_LIMIT_AUTH_MAX=5                # Auth endpoints max requests per window
RATE_LIMIT_ADMIN_MAX=200             # Admin endpoints max requests per window
RATE_LIMIT_WHITELIST=127.0.0.1,::1   # Comma-separated whitelisted IPs (public API only)
